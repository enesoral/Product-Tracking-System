
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <title>Giriş Yap</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="/Content/css/bootstrap.css">
    <link rel="stylesheet" type="text/css" href="/Content/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="/Content/css/util.css">
    <link rel="stylesheet" type="text/css" href="/Content/css/login.css">
    <link rel="stylesheet" type="text/css" href="/Content/css/toastr.css">

</head>
<body>
    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
    {
        <div class="limiter">
            <div class="container-login100">
                <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-50">
                    <span class="login100-form-title p-b-33">
                        Ürün Takip Sistemi
                    </span>

                    <div class="wrap-input100 validate-input">
                        <input class="input100" type="text" name="email" placeholder="Email" maxlength="40" required="required" 
                               oninvalid="this.setCustomValidity('Email boş bırakılamaz!')"
                               oninput="this.setCustomValidity('')">
                        <span class="focus-input100-1"></span>
                        <span class="focus-input100-2"></span>
                    </div>

                    <div class="wrap-input100 rs1 validate-input">
                        <input class="input100" type="password" name="password" maxlength="30"placeholder="Şifre" required="required" oninvalid="this.setCustomValidity('Şifre boş bırakılamaz!')" oninput="this.setCustomValidity('')">
                        <span class="focus-input100-1"></span>
                        <span class="focus-input100-2"></span>
                    </div>

                    <div class="container-login100-form-btn m-t-20">
                        <input type="submit" class="login100-form-btn" value="Giriş Yap" />
                    </div>
                </div>
            </div>
        </div>
    }

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/toastr")
    @Styles.Render("~/Content/toastr")
    <script>
        $(document).ready(function () {
            if ('@TempData["message"]' == "LoginFail") {
                toastr.error('Yanlış email veya yanlış şifre girdiniz.', 'Giriş Başarısız');
            }
        });
    </script>
</body>
</html>
