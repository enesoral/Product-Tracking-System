<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/css")
</head>
<body>
    <nav class="navbar navbar-expand-lg py-3 navbar-light bg-light shadow-sm p-0">
        <div class="container">
            <a class="navbar-brand" href="/Product/Index">
                <img src="~/Content/img/deu-logo.png" width="45" alt="" class="d-inline-block align-middle mr-2">
                <span class="font-weight-lighter">Dokuz Eylül Üniversitesi</span>
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">
                    <li>@Html.ActionLink("Ürünler", "Index", "Product", null, new { @class = "btn btn-outline-secondary" })</li>
                    <li>@Html.ActionLink("Ürün Ekle", "AddProduct", "Product", null, new { @class = "btn btn-outline-secondary" })</li>
                </ul>
                <form class="form-inline my-2 my-lg-0">
                    <a href="/Login/Logout" class="btn btn-outline-danger" type="submit">Çıkış Yap</a>
                </form>
            </div>
        </div>
    </nav>

    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
    </div>
    <footer style="background-color:#F8F9FA;">
        <div class="container ">
            <p style="text-align:center;">Dokuz Eylül University &copy; @DateTime.Now.Year - All Rights Reserved.</p>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>